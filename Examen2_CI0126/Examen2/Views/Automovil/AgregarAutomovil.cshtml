@model Examen2.Models.AutomovilModel

@{
    ViewData["Title"] = "Agregar Automóvil";
}


<html>
<head>
    <link rel="stylesheet" href="~/CSS/AgregarAutomovil.css" media="screen">
</head>
<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.ExitoAlCrear)
        {
            <div class="alert-success"> <h3> @ViewBag.Message</h3></div>
        }
        else
        {
            <div class="alert-danger"> <h3> @ViewBag.Message</h3></div>
        }
    }

    @using (Html.BeginForm("AgregarAutomovil", "Automovil", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <h2>Formulario para agregar un automóvil </h2>
        <hr>   
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Marca)
                @Html.TextBoxFor(model => model.Marca, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Marca, "" , new { @class = "text-danger"} )
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Modelo)
                @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Modelo, "" , new { @class = "text-danger"} )
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Color)
                @Html.TextBoxFor(model => model.Color, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Color, "" , new { @class = "text-danger"} )
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NumeroPuertas)
                @Html.EditorFor(model => model.NumeroPuertas, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "5" } })
                @Html.ValidationMessageFor(model => model.NumeroPuertas, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>@Html.LabelFor(model => model.DobleTraccion)</label>
                <br />
                @Html.RadioButtonFor(model => model.DobleTraccion, true) Sí
                @Html.RadioButtonFor(model => model.DobleTraccion, false) No
                @Html.ValidationMessageFor(model => model.DobleTraccion, "", new { @class = "text-danger" })
            </div>


            <input type="submit" class="btn btn-enviar" value="Agregar" />
        </div>
        <br>
    }
</body>
</html>
